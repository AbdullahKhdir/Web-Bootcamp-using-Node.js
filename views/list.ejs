<%- include("header") -%>

    <div class="box" id="heading">
      <h1> <%= title %> </h1>
    </div>

    <div class="box">
      <% newListItems.forEach((item, i) => { %>
        <form name="postPop" id="postPop" class="postPop" action="/delete" method="post">
        <div class="item">
            <input  required type="checkbox" name="checkbox" value="<%= item.name %>" oninvalid="this.setCustomValidity('select an item to remove')" onchange="this.form.submit();">
            <p> <%= item.name %> </p>
        </div>
        <input type="hidden" name="listName" value="<%= title %>"></input>
      </form>
      <% }); %>

    <!-- <form id="postPop" action="/" method="post">
      </form>-->
      <form id="postPush" class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="Add new item" autocomplete="off" required oninvalid="this.setCustomValidity('Please type a text')">
        <button form="postPush" type="submit" name="list" value="<%= title %>">+</button>
        <!--<button form="postPop" type="submit" name="listRemove" value=<%= "removeItem-"+ title %>>-</button>-->
      </form>
    </div>

<%- include("footer") -%>
