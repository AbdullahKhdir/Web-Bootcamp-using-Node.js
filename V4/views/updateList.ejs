<%- include("header"); -%>

<div class="wrapper">
    <!-- Sidebar  -->
    <nav id="sidebar" class="active">
        <div class="sidebar-header">
            <h3>ToDo List</h3>
            <strong>TD</strong>
        </div>
        <ul class="list-unstyled components">
          <li class="active">
              <a href="<%= home %>">
                <i class="fas fa-home"></i>
                  Home
              </a>
          </li>
          <li>
              <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle collapsed">
                <i class="fas fa-paperclip"></i>
                  Pages
              </a>
              <ul class="list-unstyled collapse" id="pageSubmenu">
                  <li>
                      <a href="<%= lists %>">Lists</a>
                  </li>
              </ul>
          </li>
          <li>
             <a href="<%= add %>">
               <i class="fas fa-list-ul"></i>
                Add new list
             </a>
         </li>
      </ul>
    </nav>
    <!-- Page Content  -->
    <div id="content">
      <div class="boxHeader" id="heading">
        <h1 style="color: #374045;"> Edit a list </h1>
      </div>
           <div class="boxBorder">
             <div style="padding: 20px;" class="box">
               <form id="saveList" class="saveList" action="/SaveList" method="post">
                 <div class="form-group">
                   <label for="comboseTitelTxt"></label><br>
                   <%title.forEach(function(item){%>
                    <input style="margin-left:50px; border-style: solid; border-width:.5px; border-radius:30px;"
                           class="form-control" size="157" type="text" name="listTitle"
                           placeholder="Please insert the list name!" autocomplete="off"
                           value="<%= item.name %>" ></input><br><br>
                    <hr>
                    <textarea style="padding: 10px;" class="form-control" height="100" rows="10" cols="140" type="text" name="listTxt" placeholder="" autocomplete="off"><% item.items.forEach((itemName, i) => { %>
<%= itemName.name %><%});%></textarea><%});%>
                 </div>
                 <button style="margin:10px; padding:5px;" form="saveList" class="btn btn-primary" type="submit" name="button">Save</button>
               </form>
            </div>
          </div>
            <%- include("footer") -%>
    </div>
</div>

